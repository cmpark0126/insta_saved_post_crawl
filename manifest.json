{
    "manifest_version": 3,
    "name": "Instagram Saved Posts Crawler",
    "version": "1.0",
    "description": "Crawl and save your Instagram saved posts locally.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*/saved/all-posts/"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}